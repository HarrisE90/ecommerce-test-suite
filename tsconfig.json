{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2019", "dom"],
    "types": ["node", "@playwright/test"]
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
} 